doctype html
html
  head
    meta(charset="utf-8")
    title Setting | Antennas
    meta(name="viewport", content="initial-scale=1", maximum-scale="1")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    link(rel="stylesheet", href="/css/lib.min.css")
    link(rel="stylesheet", href="/css/app.min.css")
  body
    header.bar.bar-nav
      a.icon.icon-left-nav.pull-left(href="/")
      a.icon.icon-plus.pull-right(href="#addurl")
      h1.title Antennas
    div.content(style="margin-bottom: 30px;")
      div#url-list
      div#addurl.modal
        header.bar.bar-nav
          a.icon.icon-close.pull-right(href="#addurl")
          h1.title Add URL
        .content
          form.input-group
            input(type="text", placeholder="URL", required)
            button.btn.btn-positive.btn-block Add
    footer.bar.bar-standard.bar-footer
    script(src="/js/lib.min.js")
    script(src="/js/app.min.js")
